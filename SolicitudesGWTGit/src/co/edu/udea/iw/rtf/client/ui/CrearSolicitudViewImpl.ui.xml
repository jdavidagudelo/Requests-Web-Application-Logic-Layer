<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
		background-color: ivory;
		}

		.buttonSolicitud {
		background: #B5C1C5;
		background: -moz-linear-gradient(top, #e4f1f6 0%, #EEF5F7 100%);
		background: -webkit-linear-gradient(top, #e4f1f6 0%, #EEF5F7 100%);
		border: 2px solid #CED5D7;
		color: #000000;
		padding: 8px;
		width: 200px;
		font-size: 14px;
		text-shadow: 0 0 10px #00EE00;
		display: block;
		border-radius: 4px;
		font-family: helvetica;
		margin: 30px auto;
		text-decoration: none;
		}

		.buttonSolicitud:hover {
		background: #e4f1f6;
		background: -moz-linear-gradient(top, #e4f1f6 0%, #cfe6ef 100%);
		background: -webkit-linear-gradient(top, #e4f1f6 0%, #cfe6ef 100%);
		border: 2px solid #00EE00;
		color: #000000;
		padding: 8px;
		width: 200px;
		font-size: 14px;
		text-shadow: 0 0 10px #00EE00;
		display: block;
		border-radius: 4px;
		}

		.label {
		display: block;
		font-weight: bold;
		color: black;
		font-family: helvetica;
		text-align: center;
		text-decoration: none;
		margin:10px;
		font-size: 28px;
		}

	</ui:style>

	<g:HTMLPanel>
		<center>
			<g:FlowPanel styleName="{style.panel}">
				<g:Label horizontalAlignment="center" styleName="{style.label}">Realizar Solicitud</g:Label>
				<g:Label horizontalAlignment="center" >Los campos marcados con * son obligatorios</g:Label>
				<g:FlexTable width="auto" ui:field="tabla" borderWidth="0"
					cellPadding="0" cellSpacing="0">
				</g:FlexTable>
				<g:Button ui:field="buttonCrearSolicitud" text="Enviar solicitud"
					styleName="{style.buttonSolicitud}"></g:Button>
				<g:Button ui:field="buttonLimpiarForm" text="Cancelar solicitud"
					styleName="{style.buttonSolicitud}"></g:Button>
			</g:FlowPanel>
		</center>
	</g:HTMLPanel>
</ui:UiBinder>
